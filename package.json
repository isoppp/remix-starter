{
  "name": "@isoppp/remix-starter",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "start": "echo $DATABASE_URL && pnpm prisma migrate deploy && remix-serve ./build/server/index.js",
    "build": "remix vite:build",
    "dev": "dotenv -e .env.local remix vite:dev",
    "lint": "eslint .",
    "check": "pnpm biome check",
    "lint-fix": "pnpm lint --fix && pnpm check --write",
    "typecheck": "tsc",
    "migrate": "dotenv -e .env.local -- prisma migrate dev",
    "migrate:reset": "dotenv -e .env.local -- prisma migrate reset",
    "prisma:studio": "dotenv -e .env.development -- prisma studio",
    "seed": "dotenv -e .env.local -- tsx prisma/seed/index.ts",
    "postinstall": "prisma generate",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "dotenv -e .env.test -- prisma migrate reset --force --skip-seed && dotenv -e .env.test -- vitest --workspace=vitest.workspace.ts",
    "pretest": "pnpm exec playwright install chromium",
    "gen-c": "scaffdog generate react-component"
  },
  "dependencies": {
    "@prisma/client": "5.19.1",
    "@radix-ui/react-icons": "1.3.0",
    "@remix-run/express": "2.11.2",
    "@remix-run/node": "2.11.2",
    "@remix-run/react": "2.11.2",
    "@remix-run/serve": "2.11.2",
    "@tanstack/react-query": "5.55.0",
    "@trpc/client": "11.0.0-rc.502",
    "@trpc/react-query": "11.0.0-rc.502",
    "@trpc/server": "11.0.0-rc.502",
    "chalk": "5.3.0",
    "class-variance-authority": "0.7.0",
    "close-with-grace": "2.1.0",
    "clsx": "2.1.1",
    "compression": "1.7.4",
    "express": "4.19.2",
    "express-rate-limit": "7.4.0",
    "get-port": "7.1.0",
    "helmet": "7.1.0",
    "isbot": "5.1.17",
    "lucide-react": "0.438.0",
    "prisma": "5.19.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwind-merge": "2.5.2",
    "tailwindcss-animate": "1.0.7",
    "valibot": "0.41.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@remix-run/dev": "2.11.2",
    "@storybook/addon-essentials": "8.2.9",
    "@storybook/addon-interactions": "8.2.9",
    "@storybook/addon-links": "8.2.9",
    "@storybook/blocks": "8.2.9",
    "@storybook/react": "8.2.9",
    "@storybook/react-vite": "8.2.9",
    "@storybook/test": "8.2.9",
    "@testing-library/react": "16.0.1",
    "@types/compression": "1.7.5",
    "@types/express": "4.17.21",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/parser": "8.4.0",
    "@vitejs/plugin-react": "4.3.1",
    "@vitest/browser": "2.0.5",
    "autoprefixer": "10.4.20",
    "dotenv-cli": "7.4.2",
    "eslint": "9.9.1",
    "eslint-plugin-storybook": "0.8.0",
    "eslint-plugin-tailwindcss": "3.17.4",
    "globals": "15.9.0",
    "lefthook": "1.7.15",
    "playwright": "1.47.0",
    "postcss": "8.4.45",
    "scaffdog": "4.0.0",
    "storybook": "8.2.9",
    "tailwindcss": "3.4.10",
    "tsx": "4.19.0",
    "typescript": "5.5.4",
    "vite": "5.4.3",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "eslintConfig": {
    "extends": ["plugin:storybook/recommended"]
  }
}
