{
  "name": "@isoppp/remix-starter",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "start": "dotenv -e .env.production -- bash -c 'echo $DATABASE_URL && npx prisma migrate deploy && node index.js'",
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "build:server": "tsx ./scripts/build-server.ts",
    "dev": "dotenv -e .env.local -- node ./server/dev-server.js",
    "dev-email": "email dev --dir ./app/components/emails",
    "lint": "eslint .",
    "check": "pnpm biome check",
    "lint-fix": "pnpm lint --fix && pnpm check --write",
    "typecheck": "tsc",
    "migrate": "dotenv -e .env.local -- prisma migrate dev",
    "migrate:reset": "dotenv -e .env.local -- prisma migrate reset",
    "prisma:studio": "dotenv -e .env.development -- prisma studio",
    "seed": "dotenv -e .env.local -- tsx prisma/seed/index.ts",
    "postinstall": "prisma generate",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "dotenv -e .env.test -- prisma migrate reset --force --skip-seed && dotenv -e .env.test -- vitest --workspace=vitest.workspace.ts",
    "pretest": "pnpm exec playwright install chromium",
    "gen-c": "scaffdog generate react-component"
  },
  "dependencies": {
    "@google-cloud/error-reporting": "3.0.5",
    "@google-cloud/logging": "11.2.0",
    "@google-cloud/logging-winston": "6.0.0",
    "@google-cloud/opentelemetry-cloud-monitoring-exporter": "0.20.0",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "2.4.1",
    "@hookform/resolvers": "3.9.0",
    "@opentelemetry/instrumentation-express": "0.42.0",
    "@opentelemetry/instrumentation-http": "0.53.0",
    "@opentelemetry/instrumentation-winston": "0.40.0",
    "@opentelemetry/sdk-node": "0.53.0",
    "@prisma/client": "5.20.0",
    "@prisma/instrumentation": "5.20.0",
    "@radix-ui/react-icons": "1.3.0",
    "@react-email/components": "0.0.25",
    "@remix-run/express": "2.12.1",
    "@remix-run/node": "2.12.1",
    "@remix-run/react": "2.12.1",
    "@remix-run/serve": "2.12.1",
    "@tanstack/react-query": "5.59.0",
    "@trpc/client": "11.0.0-rc.553",
    "@trpc/react-query": "11.0.0-rc.553",
    "@trpc/server": "11.0.0-rc.553",
    "@vinejs/vine": "2.1.0",
    "chalk": "5.3.0",
    "class-variance-authority": "0.7.0",
    "close-with-grace": "2.1.0",
    "clsx": "2.1.1",
    "compression": "1.7.4",
    "date-fns": "3.6.0",
    "dotenv-cli": "7.4.2",
    "execa": "9.4.0",
    "express": "4.21.0",
    "express-rate-limit": "7.4.0",
    "get-port": "7.1.0",
    "helmet": "7.2.0",
    "isbot": "5.1.17",
    "lucide-react": "0.447.0",
    "opentelemetry-instrumentation-remix": "0.7.1",
    "prisma": "5.20.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.0",
    "source-map-support": "0.5.21",
    "tailwind-merge": "2.5.2",
    "tailwindcss-animate": "1.0.7",
    "valibot": "0.42.1",
    "winston": "3.14.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@remix-run/dev": "2.12.1",
    "@remix-run/testing": "2.12.1",
    "@storybook/addon-essentials": "8.3.4",
    "@storybook/addon-interactions": "8.3.4",
    "@storybook/addon-links": "8.3.4",
    "@storybook/blocks": "8.3.4",
    "@storybook/react": "8.3.4",
    "@storybook/react-vite": "8.3.4",
    "@storybook/test": "8.3.4",
    "@testing-library/react": "16.0.1",
    "@types/compression": "1.7.5",
